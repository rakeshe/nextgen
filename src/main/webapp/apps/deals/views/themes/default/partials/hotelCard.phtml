<script id="hotel-card-template" type="text/x-handlebars-template">

    {{#each this}}


    <div class="hotelcards">
        <!-- Card 1 -->
        <div class="card">
            <div class="card-image">
                <div class="card-member">Member exclusive</div>
                <img src="http://www.tnetnoc.com/hotelphotos/967/246967/2241284-Moana-Surfrider-A-Westin-Resort-and-Spa-BarLounge-1-DEF.jpg" class="card-img">
            </div>
            <div class="card-info">
                <div class="hotel-name">{{hotelNameUtf8}}</div>
                <div class="hotel-city">{{cityName}}</div>
                <div class="card-left">
                    <div class="star-sprite-4">
                    </div>
                    <p class="hotel-offer">{{marketText}}Get up to 20% off</p>
                    <ul class="card-feat-list">
                        <li>FREE Concierge</li>
                        <li>Breakfast included</li>
                        <li>FREE wifi</li>
                        <li>and more</li>
                    </ul>
                </div>
                <div class="card-right">
                    <p class="hotel-member">Member price
                        &nbsp;<span class="member-q"><a href="#" title="Member price">?</a></span></p>
                    <p class="hotel-price">{{price}}{{curySymbole}}</p>
                    <p class="hotel-avg">avg/night</p>
                    <a href="#" class="hotel-card-button" title="">View hotel</a>
                </div>
            </div>
        </div><!-- End Card 1 -->
    </div>
    </div>
    {{/each}}
</script>