<script id="hotel-card-template" type="text/x-handlebars-template">

    {{#each hData}}

    <div class="hotelcards">
        <!-- Card 1 -->
        <div class="card">
            <div class="card-image">

                {{#whenEqual ../isLoggedIn true}}

                    {{#whenEqual isMemberExclusive 'true'}}
                            <div class="card-member">Member Exclusive Offer</div>
                    {{/whenEqual}}

                {{/whenEqual}}

                {{#whenEqual ../isLoggedIn false}}

                    {{#whenEqual isMemberExclusive 'true'}}
                        <div class="card-non-member">Member Exclusive Offer</div>
                    {{/whenEqual}}

                {{/whenEqual}}

                <img class="lazy card-img" data-original="http://www.tnetnoc.com/hotelphotos/967/246967/2241284-Moana-Surfrider-A-Westin-Resort-and-Spa-BarLounge-1-DEF.jpg"/>
            </div>
            <div class="card-info">
                <div class="hotel-name">{{hotelNameUtf8}}&nbsp;{{cityName}}</div>
                <!--<div class="hotel-city">Melboune</div>-->
                <div class="card-left">
                    <div class="star-sprite-{{starRating}}">
                    </div>
                    <p class="hotel-offer">{{marketText}}</p>
                    <ul class="card-feat-list">
                        <li>Includes Breakfast for 1, Internet Access and more</li>
                    </ul>
                </div>
                <div class="card-right">
                    <p class="hotel-member">Member price
                        &nbsp;<span class="member-q"><a href="#" title="Member price">?</a></span></p>
                    <p class="hotel-price">{{price}}{{curySymbole}}</p>
                    <p class="hotel-avg">avg/night</p>
                    <a href="#" class="hotel-card-button" title="">Select dates</a>
                </div>
            </div>
        </div><!-- End Card 1 -->
    </div><!-- End Card Container -->
    {{/each}}
</script>