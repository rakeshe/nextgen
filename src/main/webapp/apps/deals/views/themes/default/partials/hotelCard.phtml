<script id="hotel-card-template" type="text/x-handlebars-template">

    {{#each hData}}

    <div class="hotelcards">
        <!-- Card 1 -->
        <div class="card">
            <div class="card-image">

                {{#whenEqual ../isLoggedIn true}}

                    {{#whenEqual isMemberExclusive 'true'}}
                            <div class="card-member">Member Exclusive Offer</div>
                    {{/whenEqual}}

                {{/whenEqual}}

                {{#whenEqual ../isLoggedIn false}}

                    {{#whenEqual isMemberExclusive 'true'}}
                        <div class="card-non-member">Member Exclusive Offer</div>
                    {{/whenEqual}}

                {{/whenEqual}}
				<!-- Dynamic hotel id value will be replaced here.. -->
                <a href="http://www.hotelclub.com/psi?type=hotel&locale=en_AU&adults=2&id={{hotelId}}" target="_blank">
                    <img class="lazy card-img" data-original="{{thImgUrl}}" />
				</a>
            </div>
            <div class="card-info">
                <div class="hotel-name">
					<!-- Dynamic hotel id value will be replaced here.. -->
					<a href="http://www.hotelclub.com/psi?type=hotel&locale=en_AU&adults=2&id={{hotelId}}" target="_blank">{{{trimString hotelNameUtf8 30}}}</a></div>
				<div class="card-desc">
					<div class="card-left">
						<div class="star-sprite-{{starRating}}">
						</div>
						<p class="hotel-offer">{{marketText}}</p>
						<ul class="card-feat-list">
						<li>Includes Breakfast for 1, Internet Access and more</li>
						</ul>
					</div>
					<div class="card-right">
						<div class="hotel-member">Member price
						&nbsp;<div class="member-q">
							<a class="member-info">?</a>
							<div class="member-info-desc">
								<div class="member-info-top">&nbsp;</div>
								<div class="member-info-middle">Member info desc goes here... Member info desc goes here... Member info desc goes here... Member info desc goes here... Member info desc goes here... Member info desc goes here... Member info desc goes here... </div>
								<div class="member-info-bottom">&nbsp;</div>
							</div>
						</div></div>
						<p class="hotel-price">{{curySymbole}}{{price}}</p>
						<p class="hotel-avg">avg/night</p>
						<span class="hotel-card-button" data-onegid="{{hotelId}}" data-hotel='{{{hotelNameUtf8}}}'>Select dates</span>
					</div>
				</div>
            </div>
        </div><!-- End Card 1 -->
    </div><!-- End Card Container -->
    {{/each}}
	
	<div class="select-dates">
        <input name="" type="hidden" id="selected-oneg" value="" />
		<div class="select-dates-close-window">
			<h3 class="select-date-hotel-name">&nbsp;</h3>
			<span class="close-select-dates" title="Close">Close</span>
		</div>
        
        <div class="select-dates-container">
            <div class="select-lable">Select the dates for your hotel stay</div>
            <div class="select-dates-row">
                <div class="select-dates-in-out">
                    <p>Check in<br />
                    <input name="" type="text" class="select-dates-input" id="select-check-in" value="dd/mm/yy"/>
					<input type="text" id="alternate-check-in" class="select-label-val"/></p>
                </div>
                <div class="select-dates-in-out">
                    <p>Check out<br />
                    <input name="" type="text" class="select-dates-input" id="select-check-out" value="dd/mm/yy"/>
					<input type="text" id="alternate-check-out" class="select-label-val"/></p>
					</p>
                </div>
                <div class="select-dates-nights">
                    <p>Nights<br />
                    <input name="" type="text" class="select-dates-display" value="0"/></p>
                </div>
            </div><!-- End row -->

            <div class="select-dates-row room-divide1">
                <div class="select-dates-room">
                    <p>Room 1</p>
                </div>
                <div class="select-dates-humans">
                    <p>Adult <small>(18+)</small><br />
                    <select name="adult-input-1" class="select-dates-input-popup" id="adult-input-1">
                      <option value='1'>1</option>
                      <option value='2' selected>2</option>
                      <option value='3'>3</option>
                      <option value='4'>4</option>
                    </select></p>
                </div>
                <div class="select-dates-humans room1">
                    <p>Child <small>(0-17)</small><br />
                    <select name="child-input-1" class="select-dates-input-popup" id="child-input-1">
                      <option value='0'>---</option>
                      <option value='1'>1</option>
                      <option value='2'>2</option>
                      <option value='3'>3</option>
                      <option value='4'>4</option>
                      <option value='5'>5</option>
                    </select></p>
                </div>
				<div class="room-1">
				</div>
            </div><!-- End room -->

			<div class="select-dates-add-remove">
				<small>If you are travelling, include yourself in Room 1</small><br />
			</div>
			<div class="add-remove-lable"><small><span class="add-room">Add a room</span> <span class="divider-room"> | </span><span class="remove-room"> Remove this room</span></small></div>
            <div class="select-dates-row">
                <a title="Find a room" class="select-dates-button find-btn">Find</a>
            </div><!-- End Button -->
        </div>
    </div>
</script>